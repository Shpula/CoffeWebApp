 @{
    ViewData["Title"] = "Оформление заказа";
}
<h2>Форма оформления покупки</h2>
@model Order


@using (Html.BeginForm("Buy", "Home", FormMethod.Post))
{
    <input type="hidden" value="@ViewBag.CoffeMachineId" name="Id" />
    <p>Для оформления покупки заполните следующие поля:</p>
    <div class="form-group">
        <div class="col-md-4">
            <p>
                @Html.LabelFor(m=>m.SellerName, "Имя")<br />
                @Html.TextBoxFor(m=>m.SellerName)
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <p>
                @Html.LabelFor(m=>m.ContactPhone, "Телефон")<br />
                @Html.TextBoxFor(m=>m.ContactPhone)
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <p>
                @Html.LabelFor(m=>m.Adress, "Адрес")<br />
                @Html.TextBoxFor(m=>m.Adress)
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            <p>
                @Html.LabelFor(m=>m.Date, "Дата")<br />
                @Html.TextBoxFor(m=>m.Date)
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <p>
                <input type="submit" value="Отправить" />
            </p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <p>
                <input type="submit" name="cancelButton" value="Cancel" formaction="@Url.Action("Cancel")" />
            </p>
        </div>
    </div>
}
